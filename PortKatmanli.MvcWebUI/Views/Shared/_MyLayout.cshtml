
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Katmanlı Port Projesi</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url("/Content/ronan-furuta-daSq9zhROxY-unsplash.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }

        .rulesLayTop {
            background-color: lightslategray;
            border: 1px solid;
            border-radius: 10px;
            box-shadow: 10px 10px 10px black;
        }

        .rulesLayMid {
        }

        .rulesLayEnd {
            background-color: cadetblue;
            margin-top: 50px;
            border: 2px solid;
            border-radius: 10px;
            box-shadow: 10px 10px 10px black;
        }

            .rulesLayEnd tr:hover {
                background-color: #788AA3;
            }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 12px;
            text-decoration: none;
            transition: background-color .3s;
            border:1px solid;
            border-radius:5px;
        }

            .pagination a.active {
                background-color: dodgerblue;
                color: white;
            }

            .pagination a:hover:not(.active) {
                background-color: darkslategray;
            }

            .seciliLink{
                background-color:dimgrey;
            }
    </style>
</head>
<body>
    <div class="rulesLayTop container">
        <h3>Rules List Panel</h3>
    </div>

    <div class="rulesLayMid">
        @*kategoriler gelebilir*@
    </div>

    <div class="rulesLayEnd container">
        @RenderBody()
    </div>
</body>
</html>